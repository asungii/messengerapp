# Uncomment the next line to define a global platform for your project
platform :ios, '13.6'

target 'Messenger' do
  use_frameworks!

  # Pods for Messenger

pod 'GoogleAnalytics'

# Firebase
pod 'Firebase/Core'
pod 'Firebase/Auth'
pod 'Firebase/Database'
pod 'Firebase/Storage'

# FB Crashlytics and Analytics
pod 'Firebase/Crashlytics'
pod 'Firebase/Analytics'

# Facebook Login
pod 'FBSDKLoginKit'

# Google Login
pod 'GoogleSignIn'

# UI Dependency
pod 'MessageKit'

# HUD Spinner Thing?
pod 'JGProgressHUD'

# Core Data, improve performance
pod 'RealmSwift'

# Image loading
pod 'SDWebImage'

end
